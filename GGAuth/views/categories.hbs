<div class="col-10">
    <h1 class="text-center">Categories</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            {{#each category}}
            <tr>
                <td>{{CatID}}</td>
                <td><a href="./categories/{{CatID}}" class="text-decoration-none">{{CatName}}</a></td>
                <td class="d-flex">
                    <button type="button" id="edt-{{CatID}}" class="btn btn-success mx-1">Edit</button>
                    <button type="button" id="del-{{CatID}}" class="btn btn-danger">Delete</button>
                </td>
            </tr>
            {{/each}}
            
        </tbody>
    </table>
</div>